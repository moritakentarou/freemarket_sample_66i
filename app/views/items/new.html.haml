                = link_to '?', "/jp/help_center/article/68/", class: "form__question"
                .sell__form__box
                  %ul.sell__price
                    %li.form__group
                      .clearfix
                        %label.l-left
                          価格
                          %span.form--require 必須
                        .l-right.sell__price--input
                          ¥
                          %div#sellprice
                            =f.number_field :price, class: "input__default", id: "input__price", placeholder: "例）300", value: ""
                    %li.clearfix
                      .l-left
                        販売手数料 (10%)
                      .l-right#output -
                    %li.clearfix.bold
                      .l-left 販売利益
                      .l-right#output2 -
