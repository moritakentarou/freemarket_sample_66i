                      -# = f.fields_for :category do |i|
                      -# = f.select :category_id, Item.x_categories.keys.to_a, {prompt: '---'}
                      -# = f.collection_select(:category_id, Category.all, :id, :name)
                      -# = f.select :category, @category_parent_array, {}, {class: 'listing-select-wrapper__box--select', id: 'parent_category'}

                      -# #children_wrapper.listing-select-wrapper__added>
                      -#   .listing-select-wrapper__box
