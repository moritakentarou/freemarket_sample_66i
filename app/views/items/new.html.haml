                    = f.select :condition, Item.conditions.keys.to_a, {prompt: '---'}, {class: "select__default"}
              .sell__content
                %h3.sell--sub__head 配送について
                = link_to '?', "/jp/help_center/article/68/",class: "form__question"
                .sell__form__box
                  .form__group
                    %label
                      配送料の負担
                      %span.form--require 必須
                
