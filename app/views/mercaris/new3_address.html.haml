    .new3__form-title
      お届け先住所入力
    .new3__form-box
      .new3__form-box-area
        .new3__form-box-area-title
          お名前
        .new3__form-box-area-required
          必須
      .new3__form-box-form
        =form_with do |f|
          =f.text_field :firstname, placeholder: "例）山田", class: "new3__form-box-form-na"
          =f.text_field :lastname, placeholder: "例）彩", class: "new3__form-box-form-me"
          .new3__form-box-form-area
            .new3__form-box-form-area-title-1
              お名前カナ
            .new3__form-box-form-area-required-1
              必須
          =f.text_field :kanafirstname, placeholder: "例）ヤマダ", class: "new3__form-box-form-na"
          =f.text_field :kanalastname, placeholder: "例）アヤ", class: "new3__form-box-form-me"
          .new3__form-box-form-area
            .new3__form-box-form-area-title-1
              郵便番号
            .new3__form-box-form-area-required-1
              必須
          =f.text_field :post, placeholder: "例）１２３−４５６", class: "new3__form-box-form-na"
          .new3__form-box-form-area
            .new3__form-box-form-area-title-1
              都道府県
            .new3__form-box-form-area-required-1
              必須
          =f.select :prefectures, [ ["北海道",1], ["青森", 2], ["岩手", 3 ] ,["宮城", 4], ["秋田", 5], ["山形", 6],["福島",7], ["茨城", 8], ["栃木", 9 ] ,["群馬", 10], ["埼玉", 11], ["千葉", 12], ["東京", 13], ["神奈川", 14], ["新潟", 15] ,["富山", 16], ["石川", 17], ["福井", 18],["山梨", 19], ["長野", 20], ["岐阜", 21] ,["静岡", 22], ["愛知", 23], ["三重", 24], ["滋賀", 25], ["京都", 26], ["大阪", 27] ,["兵庫", 28], ["奈良", 29], ["和歌山", 30],["鳥取", 31], ["島根", 32], ["岡山", 33] ,["広島", 34], ["山口", 35], ["徳島", 36], ["香川", 37], ["愛媛", 38], ["高知", 39] ,["福岡", 40], ["滋賀", 41], ["長崎", 42], ["熊本", 43], ["大分", 44] ,["宮崎", 45], ["鹿児島", 46], ["沖縄", 47] ],{}, { class: "new3__form-box-form-pre" }
