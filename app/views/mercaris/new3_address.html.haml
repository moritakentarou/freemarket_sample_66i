            .new3__form-box-form-area-title-1
              市区町村
            .new3__form-box-form-area-required-1
              必須
          =f.text_field :municipality, placeholder: "例）横浜市緑区", class: "new3__form-box-form-na"
          .new3__form-box-form-area
            .new3__form-box-form-area-title-1
              番地
            .new3__form-box-form-area-required-1
              必須
          =f.text_field :address, placeholder: "例）青山１−１−１", class: "new3__form-box-form-na"
          .new3__form-box-form-area
            .new3__form-box-form-area-title-1
              建物名
            .new3__form-box-form-area-required-2
              任意
          =f.text_field :building, placeholder: "例）柳ビル１０３", class: "new3__form-box-form-na"
          .new3__form-box-form-area
            .new3__form-box-form-area-title-1
              電話
            .new3__form-box-form-area-required-2
              任意
          =f.text_field :tel, placeholder: "例）０９０１２３４５６７８", class: "new3__form-box-form-na"
          =f.submit "次へ進む", class: "new3btn"
